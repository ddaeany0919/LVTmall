<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lvtmall.registeration16.Main.Userinfo.Userinfo1"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id="@+id/menu"
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/userinfolistView"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/purchaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:drawableStart="@drawable/shopping_bag"
                    android:drawableLeft="@drawable/shopping_bag"
                    android:background="@drawable/bottomline"
                    android:text="     구매 내역"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/exchangeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:drawableStart="@drawable/exchange"
                    android:drawableLeft="@drawable/exchange"
                    android:background="@drawable/bottomline"
                    android:text="     Pay 구매"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/changeinformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:drawableStart="@drawable/ic_accessibility_black_24dp"
                    android:drawableLeft="@drawable/ic_accessibility_black_24dp"
                    android:background="@drawable/bottomline"
                    android:text="     회원정보 수정"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
