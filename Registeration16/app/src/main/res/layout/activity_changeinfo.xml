<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lvtmall.registeration16.Register.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/category_itemline1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="회원정보 수정"
                    android:textColor="@color/gonggaBlue"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="아이디"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="18dp"
                    android:id="@+id/idText"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"/>


                <EditText
                    android:inputType="textPassword"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:id="@+id/changepasswordText"
                    android:drawableStart="@drawable/ic_https_black_24dp"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"/>

                <EditText
                    android:inputType="textPassword"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 확인"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:id="@+id/changepasswordText1"
                    android:drawableStart="@drawable/ic_https_black_24dp"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:hint="주소"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff"
                            android:textSize="15dp"
                            android:id="@+id/findAdress"
                            android:drawableStart="@drawable/ic_near_me_black_24dp"
                            android:drawableLeft="@drawable/ic_near_me_black_24dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary"/>


                        <Button
                            android:id="@+id/findAdressButton"
                            android:layout_width="105dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="#ED00C8"
                            android:text="주소 검색"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/findAdress1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:hint="우편 번호"

                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff" />
                        <EditText
                            android:id="@+id/findAdress2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"

                            android:hint="상세 주소"
                             android:textColor="#ffffff"
                            android:textColorHint="#ffffff" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:drawableStart="@drawable/ic_phone_black_24dp"
                            android:drawableLeft="@drawable/ic_phone_black_24dp"
                            android:hint="휴대전화"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <EditText
                        android:id="@+id/emailText"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:hint="이메일"
                        android:padding="10dp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="13dp"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="@color/colorPrimaryDark"
                        android:text="수정하기"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/fixButton"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>