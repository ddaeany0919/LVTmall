            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/sellFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>